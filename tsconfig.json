{
    "compilerOptions": {
        "target": "ES2022",
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "module": "ESNext",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "types": [
            "node",
            "jest"
        ],
        "moduleResolution": "bundler",
        "isolatedModules": true,
        "moduleDetection": "force",
        "allowJs": true,
        "jsx": "react-jsx",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@/engine/*": [
                "./src/engine/*"
            ]
        },
        "sourceMap": true,
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "files": [
        "./App.tsx"
    ],
    "exclude": [
        "_old/**",
        "components/**",
        "node_modules",
        "dist",
        ".git",
        "tests"
    ]
}